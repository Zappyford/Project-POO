<Window x:Name="WindowInGame" x:Class="WpfSmallWorld.InGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InGame" Height="900" Width="1440"
        xmlns:local="clr-namespace:WpfSmallWorld" ResizeMode="NoResize"
        xmlns:PM="clr-namespace:PetitMonde;assembly=SmallWorld" KeyUp="WindowInGame_KeyUp"
        >
    <Grid>

        <Grid x:Name="mapGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="900" RenderTransformOrigin="0.026,0.048" Width="1440" Margin="-6,0,0,-28">
            <Label x:Name="lblCurrentPlayer" Content="Player1's turn" HorizontalAlignment="Left" Margin="972,10,0,0" VerticalAlignment="Top" Height="47" Width="458"/>
            <Button x:Name="btnEndTurn" Content="End turn" HorizontalAlignment="Left" Margin="1223,782,0,0" VerticalAlignment="Top" Width="75" Click="btnEndTurn_Click"/>
            <Label x:Name="lblRemainingTurns" Content="Number of turns left" HorizontalAlignment="Left" Margin="1030,782,0,0" VerticalAlignment="Top"/>
           
        </Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="1869,350,-535,0" VerticalAlignment="Top" Width="100"/>
        <Rectangle x:Name="MenuRectangle" Panel.ZIndex="4" Fill="Black" HorizontalAlignment="Left" Stroke="Black" VerticalAlignment="Top" Margin="0,0,0,0" Visibility="Collapsed" IsEnabled="False" Opacity="0.8"/>
    </Grid>
  
</Window>
