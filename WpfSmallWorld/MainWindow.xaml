<Window x:Name="MenuWindow" x:Class="WpfSmallWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PetitMonde" Height="768" Width="1024"
        xmlns:local="clr-namespace:WpfSmallWorld" WindowStartupLocation="CenterScreen"
        >
    
    <Window.Background>
        <ImageBrush ImageSource="{DynamicResource backgroundImage}"></ImageBrush>
    </Window.Background>
    <Grid x:Name="gridMainWindow">
        <Button x:Name="btnNewGame" Content="Start Game" HorizontalAlignment="Left" Margin="119,618,0,0" VerticalAlignment="Top" Width="86" RenderTransformOrigin="0.5,0.5" IsDefault="True" Height="42" Click="btnNewGame_Click"/>
        <Button x:Name="btnLoadGame" Content="Load Game" HorizontalAlignment="Left" Margin="440,618,0,0" VerticalAlignment="Top" Width="86" Height="42" Click="btnLoadGame_Click"/>
        <Button x:Name="btnQuit" Content="Quit" HorizontalAlignment="Left" Margin="759,618,0,0" VerticalAlignment="Top" Width="86" Click="btnQuit_Click" Height="42"/>

    </Grid>
</Window>
