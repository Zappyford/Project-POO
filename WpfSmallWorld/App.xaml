<Application x:Class="WpfSmallWorld.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <BitmapImage x:Key="backgroundImage" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/smallworld_boxfront.jpg"/>
        <BitmapImage x:Key="PlainsCell" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/plaine.png"/>
        <BitmapImage x:Key="MountainCell" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/montagne.png"/>
        <BitmapImage x:Key="DesertCell" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/desert.png"/>
        <BitmapImage x:Key="ForestCell" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/foret.png"/>
        <BitmapImage x:Key="DwarfImg"  CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources\dwarfUnit.png" />
    </Application.Resources>
</Application>
