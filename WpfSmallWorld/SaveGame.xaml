<Window x:Class="WpfSmallWorld.SaveGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaveGame" Height="400" Width="454">
    <Grid>
            <ListBox x:Name="listSavedGames" HorizontalAlignment="Left" Height="239" Margin="75,78,0,0" VerticalAlignment="Top" Width="291" SelectionChanged="listSavedGames_SelectionChanged"/>
            <Button x:Name="btnSaveGame" Content="Save Game &gt;" HorizontalAlignment="Left" Margin="353,322,0,0" VerticalAlignment="Top" Width="83" Click="btnSaveGame_Click" Foreground="Black" Height="38"/>
            <Button x:Name="btnBack" Foreground="Black" Content="&lt; Back" HorizontalAlignment="Left" Margin="10,322,0,0" VerticalAlignment="Top" Width="81" Click="btnBack_Click" Height="38"/>
            <TextBox x:Name="tbNameGame" HorizontalAlignment="Left" Height="23" Margin="154,50,0,0" TextWrapping="Wrap" Text="SavedGame1" VerticalAlignment="Top" Width="212" TextChanged="tbNameGame_TextChanged" />
            <Label x:Name="lblNameGame" Content="Name : " HorizontalAlignment="Left" Margin="75,47,0,0" VerticalAlignment="Top" Width="74" FontFamily="/WpfSmallWorld;component/Resources/#Trajan Pro"/>
            <Label x:Name="lblSaveGame" Content="Save Game" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="/WpfSmallWorld;component/Resources/#Trajan Pro" />
    </Grid>
</Window>
