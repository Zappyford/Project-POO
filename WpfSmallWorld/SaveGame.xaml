<Window x:Class="WpfSmallWorld.SaveGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaveGame" Height="384" Width="454">
    <Grid>
        <Grid>
            <ListBox x:Name="listSavedGames" HorizontalAlignment="Left" Height="239" Margin="75,78,0,0" VerticalAlignment="Top" Width="291" SelectionChanged="listSavedGames_SelectionChanged"/>
            <Button x:Name="btnSaveGame" Content="Save Game &gt;" HorizontalAlignment="Left" Margin="353,322,0,0" VerticalAlignment="Top" Width="83" Click="btnSaveGame_Click"/>
            <Button x:Name="btnBack" Content="&lt; Back" HorizontalAlignment="Left" Margin="10,322,0,0" VerticalAlignment="Top" Width="81" Click="btnBack_Click"/>
            <TextBox x:Name="tbNameGame" HorizontalAlignment="Left" Height="23" Margin="154,50,0,0" TextWrapping="Wrap" Text="SavedGame1" VerticalAlignment="Top" Width="212" TextChanged="tbNameGame_TextChanged" />
            <Label x:Name="lblNameGame" Content="Name : " HorizontalAlignment="Left" Margin="75,47,0,0" VerticalAlignment="Top" Width="74"/>

        </Grid>
    </Grid>
</Window>
